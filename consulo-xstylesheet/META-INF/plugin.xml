<idea-plugin>
    <id>org.consulo.xstylesheet</id>
    <name>XStylesheet API</name>

    <extensionPoints>
        <extensionPoint name="table" beanClass="org.consulo.xstylesheet.definition.XStyleSheetTableExtension"/>
    </extensionPoints>

    <extensions defaultExtensionNs="org.consulo.xstylesheet">
        <table file="/org/consulo/xstylesheet/defaultXStyleSheetTable.xml"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection implementationClass="org.consulo.xstylesheet.codeInsight.PropertyIsNotValidInspection" displayName="Invalid property name" groupName="CSS" enabledByDefault="true"/>
        <colorProvider implementation="org.consulo.xstylesheet.editor.lineMarker.XStyleSheetElementColorProvider"/>
    </extensions>
</idea-plugin>